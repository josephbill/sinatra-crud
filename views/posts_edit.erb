<h1>Edit Post</h1>
<form action="/users/<%= @user.id %>/posts/<%= @post.id %>" method="post" enctype="multipart/form-data">
  <input type="hidden" name="_method" value="put">
<label for="title">Title:</label>
<input type="text" name="post[title]" id="title" value="<%= @post.title %>">

<label for="content">Content:</label>

  <textarea name="post[content]" id="content"><%= @post.content %></textarea>
<label for="image">Image:</label>
<input type="file" name="post[image]" id="image">

  <input type="submit" value="Update">
</form>