<h1>Posts for <%= @user.name %></h1>
<a href="/users/<%= @user.id %>/posts/new">New Post</a>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= image_tag post.image.url if post.image.present? %></td>
        <td>
          <a href="/users/<%= @user.id %>/posts/<%= post.id %>">Show</a>
          <a href="/users/<%= @user.id %>/posts/<%= post.id %>/edit">Edit</a>
          <form action="/users/<%= @user.id %>/posts/<%= post.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete">
          </form>
        </td>
      </tr>
    <% end %>
      </tbody>
    </table>
    <%= flash[:success] %>